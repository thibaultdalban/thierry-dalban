%body{class: page_classes}
  %header
    = partial "layouts/nav"
  = yield
  = javascript_include_tag "https://code.jquery.com/jquery-3.1.1.min.js"
  = javascript_include_tag "https://unpkg.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"
  = javascript_include_tag "https://unpkg.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"
  = javascript_include_tag :all
  = yield_content :javascripts
